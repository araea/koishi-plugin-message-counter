{
  "name": "koishi-plugin-message-counter",
  "description": "Koishi 的消息数量统计插件。生成各种发言排行榜。",
  "version": "2.6.15",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "dist"
  ],
  "koishi": {
    "service": {
      "required": [
        "database",
        "cron"
      ],
      "optional": [
        "markdownToImage",
        "puppeteer"
      ]
    }
  },
  "license": "MIT OR Apache-2.0",
  "contributors": [
    "Nawyjx <3373167460@qq.com>",
    "shangxueink <1919892171@qq.com>"
  ],
  "homepage": "https://www.npmjs.com/package/koishi-plugin-message-counter?activeTab=readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/araea/koishi-plugin-message-counter.git"
  },
  "scripts": {
    "build": "tsup && tsc --project tsconfig.json && node -e \"const fs=require('fs');fs.rmSync('lib/assets',{recursive:true,force:true});fs.mkdirSync('lib/assets',{recursive:true});fs.cpSync('src/assets','lib/assets',{recursive:true});\""
  },
  "dependencies": {
    "echarts": "^5.4.3",
    "echarts-gl": "^2.0.9"
  },
  "keywords": [
    "chatbot",
    "koishi",
    "plugin",
    "message",
    "counter",
    "message-counter",
    "rank",
    "发言排行榜",
    "排行榜",
    "消息",
    "记录",
    "发言榜"
  ],
  "peerDependencies": {
    "koishi": "^4.18.9"
  },
  "devDependencies": {
    "koishi-plugin-cron": "^3.1.0",
    "koishi-plugin-markdown-to-image-service": "^1.2.5",
    "koishi-plugin-puppeteer": "^3.9.0",
    "tsup": "^8.2.4",
    "typescript": "^5.4.5"
  }
}
